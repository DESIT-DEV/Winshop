doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cupones publicados
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css")
    body 
        
       .container 
        br
        .row 
        .col-12 
            a(href="/cupones/add/").btn.btn-primary Agregar Cup√≥n 
        br
        .row 
            table.table
                thead
                    tr
                    th(scope='col') #
                    th(scope='col') Nombre
                    th(scope='col') Descuento
                    th(scope='col') Fecha
                tbody
                    each cupon in cupones
                      tr
                        th(scope='row') #{cupon.id}
                        td #{cupon.nombre}
                        td #{cupon.descuento}
                        td #{cupon.vecnimiento}